    "children": [
      "flex-layout.col#categories-seasons-items",
      "flex-layout.col#categories-seasons-images"
    ],
    "props": {
      "preventHorizontalStretch": true,
      "colGap": 9,
      "blockClass": "subcategories"
    }
  },

